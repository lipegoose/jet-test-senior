{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "files": ["src/types/modules.d.ts"],
    "exclude": ["node_modules"]
  }
  